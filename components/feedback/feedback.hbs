<!-- Accordion -->
<div id="feedback-thanks" class="js-form-confirmation u-hidden venus">Thanks for your feedback.</div>
<div class="accordion accordion--simple js-accordion js-accordion-simple">
    <div class="js-accordion-content">
        <a class="accordion__title accordion__title--link js-accordion-title icon--accordion-simple venus" data-js-accordion-event-label="Is there anything wrong with this page?" tabindex="-1" href="/feedback">Is there anything wrong with this page?</a>
        <div class="accordion__body mars js-accordion-body">
            <form id="feedback-form" method="POST" class="js-form-submitter">
                <div class="group u-mb-m u-mt-m">
                    <div class="u-mb-s">
                        <label id="feedback-message-label" class="label" for="feedback-message">How can we improve this survey?</label>
                        <textarea class="input input--textarea js-charlimit-input js-form-message" name="message" id="feedback-message" rows="8" cols="60" maxlength="2000"></textarea>
                        <div id="feedback-message-remaining" class="input__limit u-mt-xs mercury">Characters remaining: <span>-</span></div>
                    </div>
                    <div class="u-mb-xs">
                        <label id="feedback-name-label" class="label" for="feedback-name">
                            <div class="label__inner">
                                Name (optional)
                                <br />
                                <span class="label__description pluto">Please include your name and email address if youâ€™re interested in taking part in further research to improve this survey</span>
                            </div>
                        </label>
                        <input type="text" class="input" name="name" id="feedback-name" value=""/>
                    </div>
                    <div class="u-mb-s">
                        <label id="feedback-email-label" class="label" for="feedback-email">Email address (optional)</label>
                        <input type="text" class="input js-feedback-email" name="email" id="feedback-email" value=""/>
                    </div>
                </div>
                <button class="btn u-mb-s js-form-submit js-accordion-close u-mr-xs" type="submit" name="action[send_feedback]" data-qa="btn-feedback-submit" data-ga="click" data-ga-category="Feedback" data-ga-action="Send" data-endpoint="#"> Send feedback</button>
            </form>
            {{> @button btn-classes='btn--secondary btn--small js-accordion-close u-no-js-hide' data-qa="a-feedback-close" label="I don't want to provide feedback"}}
        </div>
    </div>
</div>